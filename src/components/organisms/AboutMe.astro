---
import BadgeItem from "../items/BadgeItem.astro";
import AvatarItem from "../items/AvatarItem.astro";
import LinkedInIcon from "../icons/LinkedInIcon.astro";
import GitHubIcon from "../icons/GitHubIcon.astro";
import CurriculumIcon from "../icons/CurriculumIcon.astro";
import MailIcon from "../icons/MailIcon.astro";

const REDES = [
  {
    name: "Git Hub",
    link: "https://github.com/ErickCor24",
    badge: GitHubIcon,
  },
  {
    name: "LinkedIn",
    link: "https://www.linkedin.com/in/erick-cor/",
    badge: LinkedInIcon,
  },
  {
    name: "erickcordovaviteri@gmail.com",
    link: "mailto:erickcordovaviteri@gmail.com",
    badge: MailIcon,
  },
  {
    name: "Curriculum",
    link: "https://drive.google.com/file/d/1DaccYQEpllJkfGyMYQ0zNCyeL_yYkv-S/view?usp=sharing",
    badge: CurriculumIcon,
  },
];
---

<section
  class="flex flex-col gap-8 px-[10%] justify-center md:-top-14 pt-8 box-border"
  id="about"
>
  <h1
    class="text-xl font-light leading-snug text-transparent bg-clip-text bg-gradient-to-r from-cali-300 via-smoke-200 to-cali-300 tracking-widest"
  >
    SOFTWARE ENGINEER
  </h1>
  <AvatarItem />
  <div>
    <p class="text-pretty sm:text-xl mb-4"><b class="text-cali-50">+2 year experience</b> in software development, especalizated in web applications, APIs & developers tools. Focused on DX, performance, quality and reliable deployments</p>

    <div class="flex gap-2 flex-wrap xl:gap-4">
      {REDES.map((redes) => <BadgeItem {...redes} />)}
    </div>
  </div>
</section>
