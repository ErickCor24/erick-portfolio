---
import BadgeItem from "../items/BadgeItem.astro";
import AvatarItem from "../items/AvatarItem.astro";
import LinkedInIcon from "../icons/LinkedInIcon.astro";
import GitHubIcon from "../icons/GitHubIcon.astro";
import CurriculumIcon from "../icons/CurriculumIcon.astro";
import MailIcon from "../icons/MailIcon.astro";

const REDES = [
  {
    name: "Git Hub",
    link: "https://github.com/ErickCor24",
    badge: GitHubIcon,
  },
  {
    name: "LinkedIn",
    link: "https://www.linkedin.com/in/erick-cor/",
    badge: LinkedInIcon,
  },
  {
    name: "erickcordovaviteri@gmail.com",
    link: "mailto:erickcordovaviteri@gmail.com",
    badge: MailIcon,
  },
  {
    name: "Curriculum",
    link: "public/pdf/Erick_Cordova-CV.pdf",
    badge: CurriculumIcon,
  },
];
---

<section
  class="flex flex-col gap-4 px-[10%] justify-center md:-top-14 pt-8 box-border"
  id="about"
>
  <h1
    class="text-4xl sm:text-5xl font-bold leading-snug text-transparent bg-clip-text bg-gradient-to-r from-cali-300 via-smoke-200 to-cali-300"
  >
    SOFTWARE ENGINEER
  </h1>
  <AvatarItem />
  <div>
    <p class="text-pretty sm:text-xl">Hello! 👋🏼 I'm a 22 year old <b class="text-cali-50">Full Stack Developer</b>passionate about emerging technologies and <b class="text-cali-50">Web Development. 🧑🏽‍💻</b></p>
    <br />
    <p class="text-pretty mb-4 sm:text-xl">I'm currently pursuing a degree in <b class="text-cali-50">Software Engineering</b> specializing in <b class="text-cali-50">React</b> & <b class="text-cali-50">Node.js</b> development.💻 With two years of experience in software development, I have worked with multiple technologies, applying <b class="text-cali-50">SOLID</b> principles <b class="text-cali-50">UX ⭐</b>principles to build robust and scalable solutions⭐.
    </p>
    <div class="flex gap-2 flex-wrap xl:gap-4">
      {REDES.map((redes) => <BadgeItem {...redes} />)}
    </div>
  </div>
</section>
