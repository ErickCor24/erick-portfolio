---
import ProjectItem from "../items/ProjectItem.astro";
import { getCollection } from "astro:content";
import ProjectsIcon from "../icons/ProjectsIcon.astro";
import projects from "../data/projects.json"

interface Project {
  title: string;
  description:string[];
  type: string;
  repo?: string;
  img?: string;
}

const experience = projects;

---

<section id="projects" class="flex flex-col relative gap-4 px-[10%] pt-8 box-border">
  <div class="flex items-center gap-2">
    <ProjectsIcon/>
    <h1 class="text-xl text-cali-100 tracking-widest">PROJECTS</h1>
  </div>
  <p>A selection of recent work showcasing my approach and stacks.</p>
  <div class="grid md:grid-cols-2 gap-8 items-center">
    {
      experience.map((project) => {
        return (<ProjectItem {...project} />
        );
      })
    }
  </div>
</section>
